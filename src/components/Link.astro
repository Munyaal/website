---
type Props = {
  path: string;
  name: string;
};

const { path, name } = Astro.props;
---
<li>
  <a
    href={path}
    class={`block rounded py-2 px-3 md:p-0 bg-primary-700 hover:bg-primary-600 md:bg-transparent md:hover:bg-transparent text-neutral-50 md:hover:text-white`}
  >
    {name}
  </a>
</li>
