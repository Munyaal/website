---
type Props = {
  path: string;
  title: string;
};

const { path, title } = Astro.props;
---

<li>
  <a
    href={path}
    class={"flex py-2 px-3 md:p-0 items-center rounded hover:bg-gray-200 md:hover:bg-transparent text-gray-700 hover:text-gray-950"}
  >
    <span> {title} </span>
  </a>
</li>
