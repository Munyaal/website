---
import Container from "./Container.astro";
import logo from "../assets/logo.svg";
import Link from "./Link.astro";

const menuItems = [
  {
    title: "Inicio",
    path: "/",
  },
  {
    title: "Qui√©nes Somos",
    path: "/about",
  },
  {
    title: "Contacto",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col md:flex-row justify-between items-center my-5">
    <div class="flex items-center w-full md:w-auto justify-between">
      <a href="/">
        <img src={logo.src} class="h-14" alt="Logo" />
      </a>

      <div class="block md:hidden">
        <button
          id="menu-button"
          class="p-2 rounded cursor-pointer focus:border-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="size-6"
          >
            <path
              fill-rule="evenodd"
              d="M3 6.75A.75.75 0 0 1 3.75 6h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 6.75ZM3 12a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 12Zm8.25 5.25a.75.75 0 0 1 .75-.75h8.25a.75.75 0 0 1 0 1.5H12a.75.75 0 0 1-.75-.75Z"
              clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>

    </div>
    <nav class="hidden w-full md:w-auto mt-2 md:flex md:mt-0" id="menu">
      <ul class="flex flex-col md:flex-row md:gap-3">
        {
          menuItems.map(({ title, path }) => (
            <Link title={title} path={path} />
          ))
        }
      </ul>
    </nav>
  </header>
</Container>

<script>
  const $ = (key: string) => document.querySelector(key);

  const button = $("#menu-button");

  button!.addEventListener("click", () => {
    const menu = $("#menu");
    menu!.classList.toggle("hidden");
  });
</script>
